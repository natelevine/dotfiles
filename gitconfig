# This is Git's per-user configuration file.

[user]
# Please adapt and uncomment the following lines:
  name = Nathan Levine
  email = natejlevine@gmail.com

[fetch]
  prune = true

[push]
  default = simple
  autoSetupRemote = true

# http://stackoverflow.com/questions/18257622/why-is-git-core-preloadindex-default-value-false
[core]
  preloadindex = true
  deltabasecachelimit = 4g
  editor = vim

[help]
# Autocorrect includes things like "init" which is dangerous
  autocorrect = 0

[feature]
  manyfiles = true

[alias]
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  cfl  = diff --name-only --diff-filter=U

